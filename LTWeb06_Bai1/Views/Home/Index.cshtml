
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="form-container">
        <h2 class="form-title">Đăng Nhập</h2>
        <form id="loginForm" method="post" action="/Home/Index">
            <div class="form-group">
                <label for="telephone">Số điện thoại</label>
                <input type="tel" id="telephone" name="telephone" required>
            </div>
            <div class="form-group">
                <label for="loginPassword">Mật khẩu</label>
                <input type="password" id="loginPassword" name="password" required>
            </div>
            <button type="submit" class="form-button">Đăng Nhập</button>
            @if (ViewBag.Error != null)
            {
                <p style="color:red; margin-top:10px;">@ViewBag.Error</p>
            }
        </form>
        <div class="form-footer">
            <p>Chưa có tài khoản? <a href="@Url.Action("HienThiDangKy", "Home")">Đăng ký ngay</a></p>
        </div>
    </div>
</div>

